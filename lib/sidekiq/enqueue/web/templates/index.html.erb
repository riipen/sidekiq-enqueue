<h3><%= t('sidekiq_enqueue') %></h3>

<form action="<%= root_path %>enqueue" method="post" id="enqueue-form">
  <%= csrf_tag %>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="job_name"><%= t('sidekiq_enqueue_job_name') %></label>
    <div class="col-sm-4">
      <input class="form-control" type="text" name="job_name" id="job_name" />
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label" for="arguments"><%= t('sidekiq_enqueue_arguments') %></label>
    <div class="col-sm-4">
      <input class="form-control" type="text" name="arguments" id="arguments" />
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-4">
      <button type="submit" class="btn btn-danger"><%= t('sidekiq_enqueue_submit') %></button>
    </div>
  </div>
</form>
